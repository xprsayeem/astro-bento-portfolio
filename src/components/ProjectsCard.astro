---
import Card from "./Card/index.astro";

const projects = [
  {
    title: "Certified Dogs & Cats",
    href: "/projects",
    timeRange: "2025",
    description: "Production pipeline analyzing Toronto's pet trends",
    tags: ["Databricks", "PySpark", "AWS S3"],
    external: false
  },
  {
    title: "Minds-On Data Architecture",
    href: "/mindson",
    timeRange: "2025",
    description: "Full-stack data platform for a youth-focused NPO",
    tags: ["Airtable", "Python", "JavaScript"],
    external: false
  },
  {
    title: "Ctrl+Salt+Delete",
    href: "https://xprsayeem.github.io/CtrlSaltDelete/",
    timeRange: "2025",
    description: "Y2K-themed snow removal service website",
    tags: ["HTML", "CSS", "JavaScript"],
    external: true
  }
];
---

<Card
  title="Projects"
  colSpan="md:col-span-1"
  rowSpan="md:row-span-4"
>
  <div class="h-full flex flex-col">
    <ul class="space-y-1.5 text-sm flex-1">
      {projects.map((project) => (
        <li class="border-b border-white/10 pb-1.5 last:border-0 last:pb-0">
          <a 
            href={project.href}
            class="group block hover:bg-white/5 -mx-2 px-2 py-0.5 rounded transition-colors"
            target={project.external ? "_blank" : undefined}
            rel={project.external ? "noopener noreferrer" : undefined}
          >
            <div class="flex items-baseline justify-between gap-2">
              <div class="flex-1 min-w-0">
                <span class="font-semibold text-neutral-50 group-hover:text-white transition-colors text-xs">
                  {project.title}
                </span>
                {project.external && (
                  <svg 
                    class="inline-block w-2.5 h-2.5 ml-1 opacity-40 group-hover:opacity-100 transition-opacity" 
                    fill="none" 
                    stroke="currentColor" 
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                )}
              </div>
              <time class="tabular-nums text-neutral-500 text-[10px] flex-shrink-0">
                {project.timeRange}
              </time>
            </div>
            
            <p class="text-[10px] text-neutral-400 group-hover:text-neutral-300 transition-colors leading-tight">
              {project.description}
            </p>

            <div class="flex flex-wrap gap-1 mt-0.5">
              {project.tags.slice(0, 3).map((tag) => (
                <span class="rounded bg-neutral-900 group-hover:bg-neutral-800 border border-neutral-700 px-1 py-0.5 text-[8px] leading-none transition-colors">
                  {tag}
                </span>
              ))}
            </div>
          </a>
        </li>
      ))}
    </ul>
  </div>
</Card>